<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:text="Classificação do Grau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView44"
        android:layout_marginTop="70dp"
        android:layout_gravity="top|center"
        android:textSize="20sp" />

    <TextView
        android:text="Olhos"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView45"
        android:textSize="20sp" />

    <TextView
        android:text="Mãos"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView46"
        android:textSize="20sp" />

    <TextView
        android:text="Pés"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView47"
        android:textSize="20sp" />

    <CheckBox
        android:text="Esquerdo"
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/esquerdo" />

    <CheckBox
        android:text="Direito"
        android:layout_marginTop="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/direito" />

    <CheckBox
        android:text="Esquerdo"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/esquerdomao" />

    <CheckBox
        android:text="Direito"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/direitomao" />

    <CheckBox
        android:text="Esquerdo"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/esquerdope" />

    <CheckBox
        android:text="Direito"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="190dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/direitope" />



    <LinearLayout
        android:id="@+id/topright"
        android:layout_width="155dp"
        android:layout_height="83dp"
        android:background="#CCCCCC"
        android:layout_gravity="center|center"
        android:orientation="vertical">

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/icones"
        android:layout_marginTop="100dp"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:background="#3333FF"
        android:layout_gravity="top|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/numeric_0_box" />

        <ImageView
            android:id="@+id/img2"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/numeric_1_box" />

        <ImageView
            android:id="@+id/img3"
            android:layout_marginLeft="230dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/numeric_2_box" />


    </RelativeLayout>

    <Button
        android:text="Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:id="@+id/button5" />

</FrameLayout>